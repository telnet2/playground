# mongod.conf

# for documentation of all options, see:
#   http://docs.mongodb.org/manual/reference/configuration-options/

# Where and how to store data.
storage:
  dbPath: {{mongoHome}}/data
  journal:
    enabled: true
  engine: "wiredTiger"

#  mmapv1:
# wiredTiger:

# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: {{mongoHome}}/logs/mongod.log

# network interfaces
net:
  port: {{mongoPort}}
  bindIp: 127.0.0.1,{{serverIpAddr}}


# how the process runs
processManagement:
  timeZoneInfo: /usr/share/zoneinfo


#operationProfiling:

{% if replSetName %}
security:
    keyFile: {{mongoHome}}/conf/mongo-rs.key

replication:
    replSetName: {{replSetName}}
{% endif %}

