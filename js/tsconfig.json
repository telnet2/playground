{
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2015",
            "es2016",
            "es2017.object",
            "esnext.asynciterable",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "./build",
        "sourceMap": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "es2017",
        "types": ["node", "chai", "jest"],
        "typeRoots": ["node_modules/@types"]
    },
    "typedocOptions": {
        "mode": "file",
        "out": "docs",
        "name": "Documentation",
        "exclude": ["*.test.ts"]
    },
    "compileOnSave": true,
    "exclude": ["node_modules/**/*", "**/*.d.ts"]
}
